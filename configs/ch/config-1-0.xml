<clickhouse>
    <remote_servers>
        <statlogs2>
            <shard>
                <replica>
                    <host>aggregator-0-0</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>aggregator-0-1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>aggregator-0-2</host>
                    <port>9000</port>
                </replica>
            </shard>
            <shard>
                <replica>
                    <host>aggregator-1-0</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>aggregator-1-1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>aggregator-1-2</host>
                    <port>9000</port>
                </replica>
            </shard>
        </statlogs2>
    </remote_servers>
    <zookeeper>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>
    <macros>
        <shard>1</shard>
        <replica>0</replica>
    </macros>
    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>9363</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
        <status_info>true</status_info>
    </prometheus>
</clickhouse>
